<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#575a60"
    tools:context=".librarianPackage.Librarian_option">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/ic_library_books_black_24dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="50dp">

    </LinearLayout>

    <Button
        android:layout_width="320dp"
        android:id="@+id/insert"
        android:layout_height="55dp"
        android:textAllCaps="false"
        android:textColor="#262224"
        android:text="Insert Book"
        android:textStyle="bold"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/edit_round"/>

    <Button
        android:layout_width="320dp"
        android:id="@+id/providedBook"
        android:layout_height="55dp"
        android:textAllCaps="false"
        android:textColor="#262224"
        android:text="Provided Book"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:textStyle="bold"
        android:background="@drawable/edit_round"/>

</LinearLayout>